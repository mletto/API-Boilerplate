{
  "compilerOptions": {
    "lib": ["es6"],                     
    "sourceMap": true,
    "target": "es6",
    "outDir": "./build",
    "baseUrl": "./src",
    "rootDir": ".",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "resolveJsonModule": true,
    "strictNullChecks": false
    },
  "include": [
    "src/**/*.ts", "src/modules/core/config/config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}